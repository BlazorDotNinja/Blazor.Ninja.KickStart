@page "/email"
@layout AppLayout
@inherits DotNinjaComponent

<EmailForm Values=@_values
		  ValueAdded=@OnValueAdded
		  ValueRemoved=@OnValueRemoved>

</EmailForm>

@code {

	private readonly List<string> _values = new List<string>
	{
		"joe@orionswave.com",
		"diana@orionswave.com",
		"nils@orionswave.com"

	};

	public async Task OnValueAdded(string value)
	{
		_values.Add(value);
	}

	public async Task OnValueRemoved(string value)
	{
		_values.Remove(value);
	}

}
